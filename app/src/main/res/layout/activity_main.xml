<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.logonrm.buttoncontroller.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Corner Changer"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal" />

    <Button
        android:text="Salvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="173dp"
        android:id="@+id/btn"
        android:layout_alignParentEnd="true"
        android:background="@android:color/holo_orange_dark"
        android:textColor="@android:color/background_light" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="68dp"
        android:id="@+id/sBar"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:progressBackgroundTint="@android:color/holo_orange_dark"
        android:indeterminateDrawable="@android:color/holo_blue_light" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:id="@+id/spinner" />
</RelativeLayout>
